<div class="container">
<table class="table table-striped">
	<thead>
<tr>
	<th>Date</th>
	<% # I need to mess with the DB & Workouts model to get date data %>
	<th>Air Squats</th>
	<th>Pushups </th>
	<th>Situps</th> 
	<th>Valdez Lifts</th>
	<th>Pike Pushups</th>
	<th>Lunges</th>
	<th>Bear Crawl</th>
	<th></th>
</tr>
	</thead>
<tbody>
<% @workouts.each do |workout| %>
<tr>
	<td><%= workout.id %></td>
	<% #Filling in column with ID for now %>
	<td align="center"><%= workout.airsquat_sets %> / <%= workout.airsquat_reps %></td>
	<td align="center"><%= workout.pushup_sets %> / <%= workout.pushup_reps %></td>
	<td align="center"><%= workout.situp_sets %> / <%= workout.situp_reps %></td>
	<td align="center"><%= workout.valdez_sets %> / <%= workout.valdez_reps %></td>
	<td align="center"><%= workout.pike_sets %> / <%= workout.pike_reps %></td>
	<td align="center"><%= workout.lunge_sets %> / <%= workout.lunge_reps %></td>
	<td align="center"><%= workout.bearcrawl_sets %> / <%= workout.bearcrawl_reps %></td>
	<td align="center"><%= link_to 'Destroy', workout_path(workout), 
					method: :delete,
					data: { confirm: 'Are you sure?'} %></td>
</tr>
</tbody>
<% end %>
</table>
</div>
